<h1>New issue</h1>

<div id="issue_form" class="container"> 

<form id="new-issue" name="issue">
  <% var f = SwordfishCheekBone.form_for(issue); %>

  <div class="form-group">
    <label for="title"> Title:</label>
    <input type="text" name="title" id="title">
  </div>

  <div class="form-group">
    <label for="body"> Descrpition:</label>
    <br>
    <textarea cols="30" rows="5" name="body" id="body"></textarea>
  </div>

  <div class="form-group">
    <%= f.select_tag('client', f.options_for_select(client_options), {label: 'Client', class: 'required_field'}) %>
  </div>

  <div class="form-group">
    <%= f.select_tag('priority', f.options_for_select(priority_options), {label: 'Priority', class: 'required_field'}) %>
  </div>

  <div class="form-group">
    <%= f.select_tag('category', f.options_for_select(category_options), {label: 'Category', class: 'required_field'}) %>
  </div>

  <div class="form-group">
    <input type="submit" class="btn btn-primary submit-form" value="Create Issue" />
    <a href="#index">Back</a>
  </div>

</form>
</div>