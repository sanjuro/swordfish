<h1>New issue</h1>

<div id="issue_form" class="container"> 

<form id="new-issue" name="issue">
  <div class="form-group">
    <label for="title"> Title:</label>
    <input type="text" name="title" id="title">
  </div>

  <div class="form-group">
    <label for="body"> Descrpition:</label>
    <textarea cols="30" rows="5" name="body" id="body"></textarea>
  </div>

  <div class="form-group">
    <% var f = SwordfishCheekBone.form_for(issue); %>
    <%= f.select_tag('client', f.options_for_select([['','']].concat(client_options), ''), {label: 'Client', class: 'required_field'}) %>
  </div>

  <div class="form-group">
    <label for="priority"> Priority:</client>
    <input name="priority" id="priority">
  </div>

  <div class="form-group">
    <label for="category"> Category:</label>
    <input name="category" id="category">
  </div>

  <div class="form-group">
    <input type="submit" class="btn btn-primary" value="Create Issue" />
    <a href="#index">Back</a>
  </div>

</form>
</div>